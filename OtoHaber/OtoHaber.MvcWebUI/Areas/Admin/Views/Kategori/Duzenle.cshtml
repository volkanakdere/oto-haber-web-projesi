@model OtoHaber.MvcWebUI.Areas.Admin.Models.KategoriDuzenleViewModel

@{
    ViewBag.Title = "Duzenle";
}

<div class="row" style="margin-top:50px;">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Kategori Düzenleme Formu
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Duzenle", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x=>x.Kategori.Id)
                    <div class="form-group">
                        @Html.LabelFor(x => x.Kategori.KategoriAdi, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Kategori.KategoriAdi, new { @class = "form-control", placeholder = "Kategori adı giriniz." })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

