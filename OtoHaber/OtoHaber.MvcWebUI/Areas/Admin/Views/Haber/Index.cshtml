@model OtoHaber.MvcWebUI.Areas.Admin.Models.HaberIndexViewModel
@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin-top:50px;">

    @if (TempData["Mesaj"] != null)
    {
        <div class="col-md-12">
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["Mesaj"]</strong>
            </div>
        </div>
    }

    <div class="col-md-12">
        <a href="@Url.Action("Ekle","Haber",new { area="Admin"})" class="btn btn-success">Yeni Makale Ekle</a>
        <hr />
        <h2>Haberler</h2>
    </div>
    @foreach (var haberDto in Model.HaberDetayDtoList)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/Uploads/HaberResimler/"+haberDto.HaberResmi)" alt="@haberDto.Baslik">
                <div class="caption">
                    <h3>@haberDto.Baslik</h3>
                    <p class="text-muted">
                        @(haberDto.HaberOzeti.Length > 150 ? haberDto.HaberOzeti.Substring(0,100)+"...":haberDto.HaberOzeti)
                    </p>
                    <p>
                        Yazar : @haberDto.YazarAdSoyad
                    </p>
                    <hr />
                    <p>
                        <a href="#" class="btn btn-primary" role="button">Düzenle</a>
                        <a href="#" class="btn btn-danger" role="button">Sil</a>
                    </p>
                </div>
            </div>
        </div>
    }


</div>


